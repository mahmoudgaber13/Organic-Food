@using Microsoft.AspNetCore.Identity
@using AuthApplication.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="largenav pull-right" style="margin-bottom:0">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="upper-links" style="display:inline-block">
                <a id="manage" class="nav-link text-white" @*asp-area="Identity" asp-page="/Account/Manage/Index"*@ href="/UserProfile/Edit" title="Manage">Hello  @UserManager.GetUserAsync(User).Result.FirstName</a>
            </li>

            <li class="upper-links" style="display:inline-block">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="form-control" style=" margin-top: 7px; font-family:'Dosis', sans-serif ; font-size: 1rem; background-color: #B0B435; color: white"><i class="fa fa-sign-out" style="font-size:48px;color:red"></i>Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="upper-links" style="display:inline-block">
                <a asp-area="Identity" asp-page="/Account/Register" id="basic" class="form-control" style=" margin-top: 7px; font-family:'Dosis', sans-serif ; font-size: 1rem; background-color: #B0B435; color: white">Register</a>
            </li>
            <li class="upper-links" style="display:inline-block">
                <a asp-area="Identity" asp-page="/Account/Login" id="basic" class="form-control" style=" margin-top: 7px; font-family:'Dosis', sans-serif ; font-size: 1rem; background-color: #B0B435; color: white">Login</a>
            </li>

            
        }

    </ul>

