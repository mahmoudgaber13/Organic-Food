@model AuthApplication.Models.Comment
@using Microsoft.AspNetCore.Identity
@using AuthApplication.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<form class="form" asp-controller="Comments" asp-action="Create" method="post">
    <input type="hidden" asp-for="UserID" value="@UserManager.GetUserAsync(User).Result.Id" />
    <input type="hidden" asp-for="ProductID" value=" @ViewContext.RouteData.Values["id"]" />
    <hr>
    <textarea asp-for="Text" class="form-control" rows="5" placeholder="Type Your Comment ..."></textarea>
    <hr>
    <input type="submit" class="btn DetailsBtn" style="padding:10px 20px; font-weight: bolder;" value="Comment" />
</form>