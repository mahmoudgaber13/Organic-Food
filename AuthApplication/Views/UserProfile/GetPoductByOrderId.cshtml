@model IEnumerable<Product>
@{
    ViewData["Title"] = "GetPoductByOrderId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetPoductByOrderId</h1>

<div class="container-fluid">
    <div class="row">
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th>Product ID.</th>
                    <th>Product Name.</th>
                    <th>Product Price.</th>
                    <th>Image.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Image</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>