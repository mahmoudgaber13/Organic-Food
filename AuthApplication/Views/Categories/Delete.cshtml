    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row-100">
    <div class="col-md-8 offset-2">
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this Category?</h3>
        <hr />
    </div>
</div>
<div class="row-100">
    <dl class="col-md-8 offset-2">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
