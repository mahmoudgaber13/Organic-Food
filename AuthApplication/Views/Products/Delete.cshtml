@model AuthApplication.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var PhotoPath = "~/images/" + (Model.Image ?? "noimage.jpg");
}
<div class="row-100">
    <div class="col-md-10 offset-1">
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this Product?</h3>
        <hr />
    </div>
</div>
<div class="row-100 mb-4">
    <dl class="col-md-10 offset-1">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@PhotoPath" style="width:70px;height:70px;" class="rounded" asp-append-version="true" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete" class="col-md-10 offset-1">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a asp-action="Index2" class="btn btn-outline-dark">Back to List</a>
    </form>
</div>
